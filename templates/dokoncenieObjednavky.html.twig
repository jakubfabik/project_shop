{% extends "layout.html.twig" %}
{% block content %}
    <h1>Dokoncenie objednavky</h1>
    <div class="checkout-total">
        <p>objednavatel: {{ pouzivatel }}</p>
        <p>Užívatelské ID: {{ userID }}</p>
        <p>IDčka objednávok: {{ polozkyID }}</p>
        <p>Čas operácie: {{ cas_vytvorenia | date("Y-m-d H:i:s")}}</p>
        <p>stav: {{ stav }}</p>
    <div>Spolu</div>
    <div>€{{ spolu | number_format(2) }}</div>
    </div>
    {% if polozkyID == "" %}
        <div style="width:200px;"><button class="btn btn-secondary" ><a href="/" style="color:white;"> Návrat do katalógu</a></button> </div>
        <p> Prázdny košík.</p>
    {% else %}
        {{ form(form) }}
    {% endif %}
{% endblock %}